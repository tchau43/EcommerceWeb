        @* -------------------------------- *@
        <h3>Recommended Products</h3>
        <div class="row">
            @foreach (var product in ViewBag.RecommendedProducts)
            {
                <div class="col-md-3">
                    <div class="card">
                        <img src="~/Hinh/HangHoa/@product.Hinh" class="card-img-top" alt="@product.TenHh" />
                        <div class="card-body">
                            <h5 class="card-title">@product.TenHh</h5>
                            <p class="card-text">Price: @product.DonGia</p>
                            <a href="@Url.Action("Detail", "HangHoa", new { id = product.MaHh })" class="btn btn-primary">View Details</a>
                        </div>
                    </div>
                </div>
            }

            <h3>Recommended Products from Other Categories</h3>
            <div class="row">
                @foreach (var product in ViewBag.RecommendedProducts)
                {
                    <div class="col-md-3">
                        <div class="card">
                            <img src="~/Hinh/HangHoa/@product.Hinh" class="card-img-top" alt="@product.TenHh" />
                            <div class="card-body">
                                <h5 class="card-title">@product.TenHh</h5>
                                <p class="card-text">Price: @product.DonGia</p>
                                <a href="@Url.Action("Detail", "HangHoa", new { id = product.MaHh })" class="btn btn-primary">View Details</a>
                            </div>
                        </div>
                    </div>
                }

            @* -------------------------------- *@

            <h1 class="fw-bold mb-0">Related products</h1>
            <div class="vesitable">
                <div class="owl-carousel vegetable-carousel justify-content-center">
                    @if (ViewBag.RecommendedProduct != null)
                    {
                        <div class="border border-primary rounded position-relative vesitable-item">
                            <div class="vesitable-img">
                                <img src="~/Hinh/HangHoa/@ViewBag.RecommendedProduct.Hinh" class="img-fluid w-100 rounded-top" alt="@ViewBag.RecommendedProduct.TenHh">
                            </div>
                            <div class="text-white bg-primary px-3 py-1 rounded position-absolute" style="top: 10px; right: 10px;">@ViewBag.RecommendedProduct.TenHh</div>
                            <div class="p-4 pb-0 rounded-bottom">
                                <h4>@ViewBag.RecommendedProduct.TenHh</h4>
                                <p>@ViewBag.RecommendedProduct.MoTaDonVi</p>
                                <div class="d-flex justify-content-between flex-lg-wrap">
                                    <p class="text-dark fs-5 fw-bold">$@ViewBag.RecommendedProduct.DonGia</p>
                                    <a href="@Url.Action("Detail", "HangHoa", new { id = ViewBag.RecommendedProduct.MaHh })" class="btn border border-secondary rounded-pill px-3 py-1 mb-4 text-primary">
                                        <i class="fa fa-shopping-bag me-2 text-primary"></i> Add to cart
                                    </a>
                                </div>
                            </div>
                        </div>
                    }
                    else
                    {
                        <p>No related products found.</p>
                    }
                </div>
            </div>


                <h1 class="fw-bold mb-0">Related products</h1>
                <div class="vesitable">
                    <div class="owl-carousel vegetable-carousel justify-content-center">
                        @if (ViewBag.RecommendedProducts != null && ViewBag.RecommendedProducts.Count > 0)
                        {
                            @foreach (var product in ViewBag.RecommendedProducts)
                            {
                                <div class="border border-primary rounded position-relative vesitable-item">
                                    <div class="vesitable-img">
                                        <img src="~/Hinh/HangHoa/@product.Hinh" class="img-fluid w-100 rounded-top" alt="@product.TenHh">
                                    </div>
                                    <div class="text-white bg-primary px-3 py-1 rounded position-absolute" style="top: 10px; right: 10px;">
                                        @product.TenHh
                                    </div>
                                    <div class="p-4 pb-0 rounded-bottom">
                                        <h4>@product.TenHh</h4>
                                        <p>@product.MoTaDonVi</p>
                                        <div class="d-flex justify-content-between flex-lg-wrap">
                                            <p class="text-dark fs-5 fw-bold">$@product.DonGia</p>
                                            <a href="@Url.Action("Detail", "HangHoa", new { id = product.MaHh })" class="btn border border-secondary rounded-pill px-3 py-1 mb-4 text-primary">
                                                <i class="fa fa-shopping-bag me-2 text-primary"></i> Add to cart
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            }
                        }
                        else
                        {
                            <p>No related products found.</p>
                        }
                    </div>
                </div>


        </div>
    </div>
    <!-- Single Product End -->
